h1
  margin 0

.h1,
p
  color $main
  font-size 1.4rem
  font-weight 400
  line-height 1.8
  margin-bottom 3rem

.header
  color $main
  font-size 2.2rem
  font-weight 800
  line-height 1.4
  margin-bottom 5rem
  max-width 40rem
  position relative
  text-transform uppercase
  &:after
    background-color $primary
    bottom -2.6rem
    content ''
    height 3px
    left -2.4rem
    position absolute
    width 8rem
    
