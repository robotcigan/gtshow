.noUi
  &-horizontal
    border none
    height 6px
    .noUi-handle
      circle(1.8rem)
  &-handle
    background $primary
    box-shadow none
    border 2px solid #fff
    border-radius 50%
  &-connect
    background $primary
    box-shadow none
  &-marker-horizontal.noUi-marker,
  &-marker-horizontal.noUi-marker-large
    display none
  &-pips
    color $main
    font-family $font
    font-weight 300



