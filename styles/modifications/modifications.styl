.slick
  &-prev,
  &-next
    top 50%
    &:before
      font-size 2.4rem
      color #fff
      transition color .2s
  &-prev
    left -3rem
    &:before
      content '\f104'
      font-family 'FontAwesome'
  &-next
    right -3rem
    &:before
      content '\f105'
      font-family 'FontAwesome'
  &-dots
    bottom -5rem
    left 0
    li
      margin 0
  &-dots li button:before
    color #dddddc
    font-size 3.5rem
    opacity 1
  &-dots li.slick-active button:before
    color $primary
    opacity 1

.slider
  opacity 0
  transition opacity .5s ease

.slick-initialized
  opacity 1

// lightgallery
.lg
  &-backdrop
    background-color rgba(#000, .9)
  &-icon
    border none
  &-outer
    .lg
      &-thumb-outer
        background-color transparent
        height 80px !important
      &-grab .lg-group
        display flex
        justify-content center
        flex-wrap nowrap
        min-width 100%
      &-thumb-item
        border none
        cursor pointer !important
        transition all .2s ease-in-out
        img
          object-position center 20%
        // &.active
        //   width 10rem !important
  &-actions
    .lg
      &-prev
        &:after
          content '\f104'
          display block
          font-family 'FontAwesome'
          transform translateX(-1px)
      &-next
        &:before
          content '\f105'
          display block
          font-family 'FontAwesome'
          transform translateX(1px)

@media(max-width 767px)
  .lg
    &-outer &-thumb-outer
      height 64px !important
    &-img-wrap
      img
        max-height 80vh !important
    &-actions
      .lg
        &-prev
          left 15px
        &-next
          right 15px
