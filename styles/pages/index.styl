.second
  align-items center
  display flex
  &__img
    background-position center
    background-repeat no-repeat
    background-size cover
    flex-shrink 0
    min-height 100vh
    position relative
    width (680 / 1600 * 100)%
  &__box
    background-color #fff
    height 100%
    left 0
    position absolute
    top 0
    width 100%
  &__text
    margin-left (240 / 1600 * 100)%
    // margin-top 9rem
    max-width (460 / 1600 * 100)%
  &__subtitle
    color $primary
    font-size 2.4rem
    font-weight 600
    margin-bottom 3.2rem
  &__title
    font-family $font-secondary
    font-size 8rem
    font-weight 600
    margin-bottom 6.4rem
    position relative
    transform translateX(-11rem)
    &:after
      background-color $primary
      bottom -3rem
      content ''
      height 3px
      left 11rem
      position absolute
      width 8rem


.services
  margin-bottom 15rem
  margin-top 15rem

.service
  display block
  transition all .2s ease
  &__img
    display block
    margin-bottom 2.4rem
    position relative
    z-index 10
    &:before
      background-color $primary
      content ''
      height 100%
      left 0
      position absolute
      top 0
      transition all .2s ease
      width 100%
      z-index -1
    img
      display block
      width 100%
  &__title
    font-family $font-secondary
    font-size 3.2rem
    font-weight 600
    transition all .3s ease
  &--first
    margin-bottom 8rem
  &:hover
    transform translate(-2.4rem, 2.4rem)
    .service
      &__img
        &:before
          transform translate(2.4rem, -2.4rem)







